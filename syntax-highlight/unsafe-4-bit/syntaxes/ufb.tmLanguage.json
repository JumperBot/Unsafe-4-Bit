{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Unsafe Four Bit",
	"patterns": [
    {"include": "#constants"},
		{"include": "#keywords"},
		{"include": "#strings"},
		{"include": "#comments"}
	],
	"repository": {
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "[0-9]"
        },
        {
          "name": "constant.language",
          "match": "[-|, \t]"
        }
      ]
    },
		"keywords": {
			"patterns": [
        {
          "name": "keyword.control.ufb",
          "match": "\\b(wvar|nvar|trim|nop|jm|jl|je|jne|print|read|wfile|rfile)\\b"
			  },
        {
          "name": "keyword.operator.ufb",
          "match": "\\b(add|sub|mul|div|mod|rmod)\\b"
        }
      ]
		},
    "strings": {
      "name": "string.quoted.double.ufb",
      "begin": "\"",
      "end": "\"[^\"]*$",
      "patterns": [
        {
          "name": "constant.character.escape.ufb",
          "match": "\\\\n|(?:UU|uu||Uu||uU)[0-9]{4}|\\$[0-9]{3}"
        }
      ]
    },
    "comments": {
			"patterns": [
				{
					"name": "comment.line.ufb",
					"match": "((?://).*)$"
				},
				{
					"name": "comment.block.ufb",
					"begin": "/\\*[^\\*]",
					"end": "\\*/"
				},
        {
          "name": "comment.block.documentation",
					"begin": "/\\*\\*",
					"end": "\\*/"
        }
			]
		}
	},
	"scopeName": "source.ufb"
}